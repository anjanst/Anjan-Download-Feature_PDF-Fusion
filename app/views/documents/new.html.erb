<!DOCTYPE html>
<html lang="en">
<head>
  <title>Upload Document</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", media: "all" %>
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center mb-4">Upload a New Document</h1>

    <div class="card p-4 shadow-sm">
      <%= form_with(model: @document, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
        <% if @document.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @document.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :title, "Document Title", class: "form-label" %>
          <%= form.text_field :title, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :file, "Upload File (.docx only)", class: "form-label" %>
          <%= form.file_field :file, class: "form-control", required: true, accept: ".docx" %>
        </div>

        <div class="mt-3 text-center">
          <%= form.submit "Upload Document", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-3">
      <a href="<%= documents_path %>" class="btn btn-secondary">Back to Documents</a>
    </div>
  </div>
</body>
</html>
